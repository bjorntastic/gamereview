<!DOCTYPE html>
<html>
<head>
  <title>Game Reviews</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<% unless session[:user_id].nil? %>
	<div class='container'>
		<nav class='logout'>
			<p>Logged in as <strong><%= session[:username] %></strong> | <%= link_to 'Logout', 'logout' %>
		</nav>
	</div>
<% end %>

<% unless flash.blank? %>
	<% flash.each do |level, msg| %>
		<div class='container'>
			<div class='col-md-4 col-xs-6 <%= level %>'>
				<p><%= msg %></p>
			</div>
		</div>
	<% end %>
<% end %>

<div id='all-the-content' class='container'>
	<%= yield %>
</div>

</body>
</html>
