<!DOCTYPE html>
<html>
<head>
  <title>Game Reviews</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<% unless session[:user_id].nil? %>
	<nav class='logout'>
		<p>Loggd in as <strong><%= session[:username] %></strong> | <%= link_to 'Logout', 'logout' %>
	</nav>
<% end %>

<% if !flash[:notice].blank? %>
	<div class='flash'>
		<p><%= flash[:notice] %></p>
	</div>
<% end %>

<div class='container'>
	<%= yield %>
</div>

</body>
</html>
