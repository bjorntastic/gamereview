<div class='row'>
	<h1>Games#index</h1>
	<p class='heading-index'>Check out and rate all these awesome games.<br /><br/></p>

	<div class='search-box'>
		<%= form_tag '/search', method: 'get' do %>
			<%= text_field_tag :search %>
			<%= submit_tag 'GO', :class => 'btn search-button' %>
		<% end %>
	</div>
</div>

<div class='row main-table-wrapper'>
	<table class='main-table'>
		<tr>
			<td class='col-xs-2 col-md-1'>Game</td>
			<td class='col-xs-2 col-md-1'>Genre</td>
			<td class='col-xs-2 col-md-1'>Publisher</td>
			<td class='col-xs-2 col-md-1'>Platform</td>
			<td class='col-xs-1'></td>
			<td class='col-xs-1'></td>
			<td class='col-xs-1'></td>
		</tr>
		
	<% @games.each_with_index do |g,i| %>
		
		<tr>
			<th><%= g %></th>
			<td><%= g.genre %></td>
			<td><%= g.publisher %></td>
			<td><%= g.platform %></td>
			<td><%= link_to 'Show', g, :class => 'btn show-button' %></td>
			<td><%= link_to 'Edit', edit_game_path(g), :class => 'btn edit-button' %></td>
			<td><%= link_to 'Delete', g, :method => 'delete', :class => 'btn del-button' %></td>
		</tr>

	<% end %>
	</table>
</div>

<br />
<%= link_to 'Add Game', new_game_path, :class => 'btn add-button' %>