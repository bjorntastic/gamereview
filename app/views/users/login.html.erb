<h1>Login to review cool games!</h1>

<%= form_tag(:action => 'attempt_login') do %>
	
	<div class='row'>
		<%= label_tag :username, nil, :class => 'col-md-2' %>
		<%= text_field_tag :username, nil, :class => 'col-md-2' %>
	</div>
	<div class='row'>
		<%= label_tag :password, nil, :class => 'col-md-2' %>
		<%= password_field_tag :password, nil, :class => 'col-md-2' %>
	</div>
	<div class='row'>
		<%= submit_tag 'Login', :class => 'col-md-2 col-md-offset-2' %>
	</div>

<% end %>

<br/>
<p>or <%= link_to 'register', :action => 'register' %> a new account</p>